@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>FUCK</h1>
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               <td width:"50%">
                   @item.Name
               </td> 
               <td width:"50%">
                   @item.DisplayOrder
               </td>
            </tr>
        }
    </tbody>
</table>
